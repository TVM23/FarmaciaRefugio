<head>
    <link rel="preload" href="/css/estilo-registro.css" as="style" />
    <link rel="stylesheet" href="/css/estilo-registro.css" />
</head>
<body>
    <section class="cuerpo">
        <div class="contenedor-form sombra">
            <div class="titulo">
                <h1>Registro</h1>
            </div>
            <div class="datos">
                <form class="formulario" id="formulario" action="/registro/nuevo-usuario" method="POST">
                    <fieldset>
                        <div class="campos esp">
                          <div class="nombre-usuario">
                            <div class="nombre esp">
                              <label for="txtNombre" class="formulario-label">*Nombre</label>
                              <!-- <input type="text" id="txtNombre" class="campo-w100" placeholder="Ingrese su nombre" required minlength="3" maxlength="8" pattern="[a-z]" title="Unicamente se aceptan palabras entre 3 a 8 caracteres de longitud que no contengan numeros o simbolos"/> -->
                              <input type="text" id="txtNombre" class="campo-w100" placeholder="Ingrese su nombre" name="nombreUsuario"/>
                              <div class="mensaje-error" id="errorNombre">
                                <p>Error message</p>
                              </div>
                            </div>
                            <div class="apellidos esp">
                              <label for="txtApellido" class="formulario-label">*Apellidos</label>
                              <!-- <input type="text" id="txtApellido" class="campo-w100" placeholder="Ingrese sus apellidos" required /> -->
                              <input type="text" id="txtApellido" class="campo-w100" placeholder="Ingrese sus apellidos" name="apellidosUsuario"/>
                              <div class="mensaje-error">
                                <p>Error message</p>
                              </div>
                            </div>
                          </div>
                            <div class="correo esp">
                                <label for="txtCorreo" class="formulario-label">*Correo electrónico</label>
                                <!-- <input type="email" id="txtCorreo" class="campo-w100" placeholder="Ingrese su correo electronico" required /> -->
                                <input type="text" id="txtCorreo" class="campo-w100" placeholder="Ingrese su correo electronico" name="emailUsuario"/>
                                <div class="mensaje-error">
                                  <p>Error message</p>
                                </div>
                            </div>
                            <div class="numero esp">
                              <label for="txtNumero" class="formulario-label">*Numero de telefono</label>
                              <!-- <input type="tel" id="txtNumero" class="campo-w100" maxlength="10" placeholder="Ingrese su numero de telefono" required /> -->
                              <input type="tel" id="txtNumero" class="campo-w100" placeholder="Ingrese su numero de telefono" name="telefonoUsuario"/>
                              <div class="mensaje-error">
                                <p>Error message</p>
                              </div>
                            </div>
                            <div class="contra">
                                <label for="txtContra" class="formulario-label">*Contraseña</label>
                                <div class="cont-pass esp">
                                  <!-- <input type="password" id="txtContra" class="contraseña" placeholder="Ingrese su contraseña" required/> -->
                                  <input type="password" id="txtContra" class="contraseña" placeholder="Ingrese su contraseña" name="passwordUsuario"/>
                                  <div class="mensaje-error">
                                    <p>Error message</p>
                                  </div>
                                  <div class="icono-ojo">
                                    <svg xmlns='http://www.w3.org/2000/svg' class='icon icon-tabler icon-tabler-eye-off' width='28' height='28' viewBox='0 0 24 24' stroke-width='1.5' stroke='#B8B8B8' fill='none' stroke-linecap='round' stroke-linejoin='round'>
                                      <path stroke='none' d='M0 0h24v24H0z' fill='none'/>
                                      <line x1='3' y1='3' x2='21' y2='21' />
                                      <path d='M10.584 10.587a2 2 0 0 0 2.828 2.83' />
                                      <path d='M9.363 5.365a9.466 9.466 0 0 1 2.637 -.365c4 0 7.333 2.333 10 7c-.778 1.361 -1.612 2.524 -2.503 3.488m-2.14 1.861c-1.631 1.1 -3.415 1.651 -5.357 1.651c-4 0 -7.333 -2.333 -10 -7c1.369 -2.395 2.913 -4.175 4.632 -5.341' />
                                    </svg>
                                  </div>
                                </div>
                            </div>
                            <div class="confirmar-contra esp">
                              <label for="txtConfContra" class="formulario-label">*Confirmar contraseña</label>
                              <!-- <input type="password" id="txtConfContra" class="campo-w100" placeholder="Confirme su contraseña" required/> -->
                              <input type="password" id="txtConfContra" class="campo-w100" placeholder="Confirme su contraseña" name="confPassword"/>
                              <div class="mensaje-error">
                                <p>Error message</p>
                              </div>
                          </div>
                        </div>
                        <div class="btn-ingresos">
                          <div class="cont">
                            <div class="ingresar login">
                              <input class="boton" type="submit" value="Crear cuenta" />
                              <!-- Cambiar a boton -->
                            </div>
                          </div>
                        </div>
                    </fieldset>
                </form>
                <div class="btn-ingresos">
                  <div class="cont">
                     <div class="ingresar facebook">
                      <svg class="icon-fb" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M504 256C504 119 393 8 256 8S8 119 8 256c0 123.78 90.69 226.38 209.25 245V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.28c-30.8 0-40.41 19.12-40.41 38.73V256h68.78l-11 71.69h-57.78V501C413.31 482.38 504 379.78 504 256z"/></svg>                                
                      <input class="boton" type="button" onclick="logIn()" value="Iniciar sesion con Facebook" />
                    </div>
                     <div id="signin" class="ingresar google" data-onsuccess="onSignIn">
                      <svg class="icon-go" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512"><path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"/></svg>
                      <input class="boton" type="button" value="Iniciar sesion con Google"" />
                    </div>
                    <div id="google-button" class="ingresar google"></div>
                    <div class="texto-log">
                        <p>¿Ya dispones de una cuenta? ¡En ese caso, ingresa con ella!</p>
                    </div>
                    <div class="ingresar crear-cuenta">
                      <a href="/iniciar-sesion" class="btn-crear">Iniciar sesion</a>
                    </div>
                  </div>
                </div>
            </div>
        </div>
      </section>
</body>
<script src="/js/registro.js"></script>
<script src="/js/FB-inicio.js"></script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js"></script>

    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="https://apis.google.com/js/api:client.js"></script>
    <script src="https://accounts.google.com/gsi/client" async="" defer=""></script>
    <script src="/js/Google-inicio.js"></script>
    <script>startApp();</script>
